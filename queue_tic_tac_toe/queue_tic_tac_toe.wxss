/* pages/queue_tic_tac_toe/queue_tic_tac_toe.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  height: 100vh;
  box-sizing: border-box;
  background-color: #f9f9f9;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  display: block;
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.subtitle {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.mode-selection {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding: 20rpx;
  background-color: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.mode-title {
  font-size: 36rpx;
  margin-bottom: 40rpx;
  color: #333;
}

.mode-buttons {
  display: flex;
  flex-direction: column;
  width: 70%;
  gap: 30rpx;
  margin-bottom: 60rpx;
}

.mode-buttons .my-button {
  background-color: #4CAF50;
  color: white;
  border-radius: 30rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 8rpx rgba(76, 175, 80, 0.3);
}

.game-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.status-bar {
  margin-bottom: 30rpx;
  height: 80rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

.player-turn {
  font-size: 34rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.player-indicator {
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 50%;
  margin-left: 10rpx;
  font-weight: bold;
}

.player-x {
  background-color: #d0e8ff;
  color: #3498db;
  box-shadow: 0 2rpx 8rpx rgba(52, 152, 219, 0.3);
}

.player-o {
  background-color: #ffe0e0;
  color: #e74c3c;
  box-shadow: 0 2rpx 8rpx rgba(231, 76, 60, 0.3);
}

.game-result {
  font-size: 40rpx;
  font-weight: bold;
  color: #4CAF50;
}

.board {
  width: 100%;
  max-width: 600rpx;
  margin: 0 auto 30rpx;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1);
}

.row {
  display: flex;
  height: 180rpx;
}

.cell {
  flex: 1;
  border: 2rpx solid #eee;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  background-color: white;
  transition: all 0.2s ease;
}

.cell-content {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}

.piece {
  font-size: 90rpx;
  font-weight: bold;
  line-height: 0; /* Fixes vertical misalignment */
}

.cell-x .piece {
  color: #3498db;
}

.cell-o .piece {
  color: #e74c3c;
}

.cell-oldest-x {
  background-color: rgba(52, 152, 219, 0.15);
  opacity: 0.5; /* Add opacity for fading effect */
}

.cell-oldest-o {
  background-color: rgba(231, 76, 60, 0.15);
  opacity: 0.5; /* Add opacity for fading effect */
}

.cell:active {
  background-color: #f5f5f5;
}

.game-info {
  display: flex;
  justify-content: space-around;
  width: 100%;
  max-width: 600rpx;
  margin-bottom: 40rpx;
}